{
  "training": {
    "train_in": ["path_to_input_features_training_set", "variable_name"],
    "train_out": ["path_to_output_features_training_set", "variable_name"],
    "output_path": "path_where_to_save_the_trained_model",
    "features_folder_name": "name_of_features_folder",
    "language": "mandarin",
    "model": {
      "name": "name_of_model",
      "type": "model_type_options:autoencoder",
      "epochs": 100,
      "early_stop_epochs": 10,
      "batch_size": 32,
      "latent_dimension": 13,
      "apc": {
        "prenet": true,
        "prenet_layers": 6,
        "prenet_dropout": 0.2,
        "prenet_units": 128,
        "rnn_layers": 3,
        "rnn_dropout": 0.2,
        "rnn_units":64,
        "residual": true
      },
      "convpc": {
        "prenet": true,
        "prenet_layers": 3,
        "prenet_dropout": 0.2,
        "prenet_units": 128,
        "apc_residual": true,
        "apc_layers": 3,
        "apc_dropout": 0.2,
        "apc_units": 512,
        "cpc_layers": 3,
        "cpc_dropout": 0.2,
        "cpc_units": 512,
        "cpc_neg": 10,
        "cpc_steps": 12,
        "dropout": 0.2,
        "learning_rate": 0.001
      },
      "cpc": {
        "encoder_layers": 5,
        "encoder_units": 512,
        "encoder_dropout": 0.2,
        "gru_units": 256,
        "dropout": 0.2,
        "neg": 10,
        "steps": 12,
        "learning_rate": 0.001
      }
    }
  },
  "prediction": {
    "output_path": "path_where_to_save_the_predictions",
    "model_path": "path_to_model_to_be_used_for_predictions",
    "model_folder_name":  "name_of_model_perhaps_with_timestamp",
    "model_type": "model_type_options:autoencoder",
    "features_folder_name": "name_of_features_folder",
    "test_set": ["path_to_folder_containing_input_features_test_set", "variable_name_data", "variable_name_index"],
    "language": "mandarin",
    "durations": ["10"],
    "use_last_layer": false,
    "window_shift": 0.01,
    "files_limit": 10,
    "use_pca": true,
    "save_matlab": true
  }
}
